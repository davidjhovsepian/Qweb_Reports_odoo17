<odoo>
  <data>
    <!-- Define actions -->

    <record model="ir.actions.act_window" id="vetapp.action_window_animals">
      <field name="name">Animals</field>
      <field name="res_model">vetapp.animal</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    <record model="ir.actions.act_window" id="vetapp.action_window_owners">
      <field name="name">Owners</field>
      <field name="res_model">vetapp.animal</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    <record id="report_vet_animal" model="ir.actions.report">
      <field name="name">Animals Report</field>
      <field name="model">vetapp.animal</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">vetapp.report_animals</field>
      <field name="report_file">vetapp.report_animals</field>
      <field name="binding_model_id" ref="model_vetapp_animal"/>
      <field name="binding_type">report</field>
    </record>

    <!-- Define server action -->
    <record model="ir.actions.server" id="vetapp.action_print_report_animal">
      <field name="name">Print Animals Report</field>
      <field name="model_id" ref="model_vetapp_animal"/>
      <field name="state">code</field>
      <field name="code">action = self.env.ref('vetapp.report_vet_animal').report_action(self)</field>
    </record>

    <!-- Define top menu item -->
    <menuitem name="Vet App" id="vetapp.menu_root"/>

    <!-- Define menu categories -->
    <menuitem name="Animals" id="vetapp.menu_1" parent="vetapp.menu_root"/>
    <menuitem name="Owners" id="vetapp.menu_2" parent="vetapp.menu_root"/>

    <!-- Define actions for menu items -->
    <menuitem name="Animals" id="vetapp.menu_1_list" parent="vetapp.menu_1"
              action="vetapp.action_window_animals"/>
    <menuitem name="Owners" id="vetapp.menu_2_owners" parent="vetapp.menu_2"
              action="vetapp.action_window_owners"/>
        


    <!-- Add print button to the report menu -->
    <menuitem name="Animals Report" id="vetapp.menu_1_print_report" parent="vetapp.menu_1"
              action="vetapp.action_print_report_animal"/>
  </data>
</odoo>
